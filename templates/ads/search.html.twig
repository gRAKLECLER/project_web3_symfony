{% extends 'base.html.twig' %}

{% block body %}
    <div>
    {% if articlesFound | length == 0 %}
        <h1>Aucun résulat pour votre recherche.</h1>
    {% else %}

        <h1 class="mt-3">Vos résulats de recherche :</h1>
        {% for article in articlesFound %}
            <div class="mt-3 p-3 bg-light border rounded">
                <li>{{ article.title }} - {{article.description}} - {{article.price}}€</li>
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}
