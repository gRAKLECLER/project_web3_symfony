<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
              crossorigin="anonymous">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{% block header %}

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{path('ads')}}">Home</a>
                </li>
                {# <li class="nav-item">
                  <a class="nav-link" href="{{path('app_user_update', {id:app.user.name})}}">Settings</a>
                </li> #}

                <li class="nav-item">
                    <a class="nav-link" href="{{path('app_logout')}}">Log out</a>
                </li>
               {# {% if is_granted('ROLE_ADMIN') %} #}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{path('app_user_index')}}">Users</a>
                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="{{path('app_ad_new')}}">Create Ad</a>
                    </li>
               {# {% endif %} #}
            </ul>

            <form class="form-inline" role="search" method="post" action="{{ path('app_ad_search') }}">
                <div>
                    <input type="text" placeholder="Search" name="search" value="{{app.request.query.get('s') | default('')}}">
                    <span>
                    <button  class="btn btn-outline-success" type="submit">Search Ad</button>
                    </span>
                    {# {% if app.user %}
                    <span class="text-end">{{ app.user.firstname }} - {{ app.user.email }}</span>
                    {% endif %} #}
                </div>
            </form>

        </div>
    </nav>

{% endblock %}

{% block body %}
{% endblock %}
</body>
</html>
