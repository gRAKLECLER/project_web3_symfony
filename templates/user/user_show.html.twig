{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <a href="{{ path('app_user_index') }}">go back</a>
        <div>
            <form action="{{ path('app_user_vote', { id: users.id }) }}" method="post">
                <button name="vote" value="up" class="btn btn-primary">vote up</button>
                <button name="vote" value="down" class="btn btn-danger">vote down</button>
                <span>{{ users.votes }}</span>
            </form>
        </div>
        <p>{{ users.firstname }}</p>
        <p>{{ users.lastname }}</p>
        <p>{{ users.email }}</p>
        <p>{{ users.password }}</p>
        {% for role in users.roles %}
            <p>{{ role }}</p>
        {% endfor %}
        <a href="{{ path('app_user_delete', {id: users.id}) }}">
            Delete user
        </a>
    </div>
{% endblock %}
