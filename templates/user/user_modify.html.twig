<div class="example-wrapper">
    <h1>New User</h1>

    <form action="{{ path('app_user_update', {id: user.id}) }}" method="post">
        <div>
            <label for="firstName">first name</label>
            <input id="firstName" name="fistName" value="{{ user.firstName|default('') }}">
        </div>
        <div>
            <label for="lastName">Last name</label>
            <input id="lastName" name="lastName" value="{{ user.lastName|default('') }}">
        </div>
        <div>
            <label for="email">email</label>
            <input type="email" id="email" name="email" value="{{ user.email|default('') }}">
        </div>
        <div>
            <label for="password">password</label>
            <input type="password" id="password" name="password" value="">
        </div>
        <div>
            <label for="role_admin">admin</label>
            {% if 'admin' in user.roles %}
                <input type="checkbox" value="ROLE_ADMIN" id="role_admin" name="role[]" checked>
            {% else %}
                <input type="checkbox" value="ROLE_ADMIN" id="role_admin" name="role[]">
            {% endif%}

            <label for="role_seller">seller</label>
            {% if 'seller' in user.roles %}
                <input type="checkbox" value="ROLE_SELLER" id="role_seller" name="role[]" checked>
            {% else %}
                <input type="checkbox" value="ROLE_SELLER" id="role_seller" name="role[]">
            {% endif%}

            <label for="role_buyer">buyer</label>
            {% if 'buyer' in user.roles %}
            <input type="checkbox" value="ROLE_BUYER" id="role_buyer" name="role[]" checked>
            {% else %}
            <input type="checkbox" value="ROLE_BUYER" id="role_buyer" name="role[]">
            {% endif%}

        </div>
        <button type="submit">submit</button>
    </form>
</div>
