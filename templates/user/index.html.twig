{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('app_user_new') }}">create user</a>
    <ul>
        {% for person in user %}
            <li>{{ person.lastname ? person.lastname : null }} {{ person.firstname }} {{ person.email }}</li>
            <a href="{{ path('app_user_show', {id: person.id}) }}">
                show page
            </a>
            <a href="{{ path('app_user_modify', {id: person.id}) }}">
                update user
            </a>
        {% endfor %}
    </ul>
</div>
{% endblock %}
